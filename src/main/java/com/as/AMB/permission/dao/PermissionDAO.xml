<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.as.AMB.permission.dao.PermissionDAO">

    <insert id="addPermission">
        INSERT INTO TB_PERMISSION (ROLE_ID, MENUS, IND_STATUS) VALUE (#{roleId}, #{menus}, #{indStatus})
    </insert>
    <update id="updatePermission">
        UPDATE TB_PERMISSION
        <trim prefix="set" suffixOverrides=",">
            <if test="menus!=null and menus!=''">
                MENUS=#{menus}
            </if>
            <if test="indStatus!=null and indStatus!=''">
                IND_STATUS=#{indStatus}
            </if>
        </trim>
        WHERE ROLE_ID=#{roleId}
    </update>
    <delete id="deletePermission">
        DELETE FROM TB_PERMISSION WHERE ROLE_ID=#{roleId}
    </delete>
    <select id="selectPermission" resultType="com.as.AMB.permission.entity.PermissionVO">
        SELECT * FROM TB_PERMISSION
        <trim prefix="where" prefixOverrides="and">
            <if test="roleId!=null and roleId!=''">
                ROLE_ID=#{roleId}
            </if>
            <if test="menus!=null and menus!=''">
                MENUS=#{menus}
            </if>
            <if test="indStatus!=null and indStatus!=''">
                IND_STATUS=#{indStatus}
            </if>
        </trim>
        WHERE ROLE_ID=#{roleId}
    </select>
</mapper>